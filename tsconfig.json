{
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/types",
      "node_modules/@testing-library"
    ],
    "outDir": "build",
    "esModuleInterop": true,
    "target": "ES2020",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "analytics/*": ["src/client/analytics/*"],
      "components/*": ["src/client/components/*"],
      "contexts/*": ["src/client/contexts/*"],
      "datatypes/*": ["src/datatypes/*"],
      "drafting/*": ["src/client/drafting/*"],
      "filtering/*": ["src/client/filtering/*"],
      "generated/*": ["src/client/generated/*"],
      "hooks/*": ["src/client/hooks/*"],
      "layouts/*": ["src/client/layouts/*"],
      "markdown/*": ["src/client/markdown/*"],
      "pages/*": ["src/client/pages/*"],
      "res/*": ["src/client/res/*"],
      "utils/*": ["src/client/utils/*"],
      "src/*": ["src/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
